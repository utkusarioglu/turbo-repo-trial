{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "__ui/*": ["../../packages/ui/src/*"],
      "__app/*": ["../../packages/app/src/*"]
